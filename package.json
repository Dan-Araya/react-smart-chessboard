  "description": "A smart, customizable React chessboard component with move validation and game state management",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "public/pieces"
  ],
  "scripts": {
    "dev": "vite",
