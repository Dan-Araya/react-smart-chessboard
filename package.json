  "keywords": [
    "react",
    "chess",
    "chessboard",
    "game",
    "typescript",
    "component"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuusuario/react-smart-chessboard.git"
  },
  "bugs": {
    "url": "https://github.com/tuusuario/react-smart-chessboard/issues"
  },
  "homepage": "https://github.com/tuusuario/react-smart-chessboard#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "chess.js": "^1.0.0-beta.6"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
